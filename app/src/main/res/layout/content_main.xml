<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="thirtysix.mission.missionthirtysix.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Please click a button below to get started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/directionsText"
        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Mission ThirtySix"
        android:id="@+id/welcomeMessage"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Sort by zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sortZip"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/directionsText"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sort alphabetically"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sortName"
        android:layout_marginTop="61dp"
        android:layout_alignTop="@+id/sortZip"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sort by newest companies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sortCreation"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/sortName"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
